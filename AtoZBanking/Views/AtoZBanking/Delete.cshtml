@model AtoZBanking.Models.Accounts
@{
    ViewData["Title"] = "Delete";
}


@using (Html.BeginForm("Delete", "AtoZBanking", new { Id = @Model.AccountId }, FormMethod.Post))
{
    <h1>Delete Account</h1>

    <h3> Are you sure you want to delete this account? </h3>

    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <td>@Html.LabelFor(a => a.AccountName)</td>
            <td>@Html.DisplayFor(a => a.AccountName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.Balance)</td>
            <td>@Html.DisplayFor(a => a.Balance)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Delete" />
                @Html.ActionLink("Back to List", "Accounts", "AtoZBanking")
            </td>
            <td></td>
        </tr>
    </table>
}

